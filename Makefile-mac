RED		:= "\e[0;31m"
GREEN	:= "\e[0;32m"
YELLOW	:= "\e[0;33m"
BLUE	:= "\e[0;34m"
MAGENTA	:= "\e[0;35m"
CYAN	:= "\e[0;36m"
RESET	:= "\e[0m"

SRCS =	main.c \
		play.c \
		editor.c \
		settings.c \
		settings2.c \
		map.c \
		help.c \
		unzip.c

NAME = ../play
ODIR = obj
CDIR = .
OBJS = $(addprefix $(ODIR)/,$(SRCS:.c=.o))
JHONNY = $(OBJS:.o=.d)

LIB_DIR =		../libs

INCLUDES =		-I ./ \
				-I ../ \
				-I $(LIB_DIR)/libft \
				-I $(LIB_DIR)/libpf \
				-I $(LIB_DIR)/libbxpm \
				-I $(LIB_DIR)/libui \
				-I $(LIB_DIR)/SDL_MAC/SDL2.framework/Headers \
				-I $(LIB_DIR)/SDL_MAC/SDL2_image.framework/Headers \
				-I $(LIB_DIR)/SDL_MAC/SDL2_ttf.framework/Headers \
				-F $(LIB_DIR)/SDL_MAC

LIB_FOLDERS = 	-L $(LIB_DIR)/libft -lft \
				-L $(LIB_DIR)/libpf -lpf \
				-L $(LIB_DIR)/libui -lui \
				-L $(LIB_DIR)/libbxpm -lbxpm \
				-framework SDL2 \
				-framework SDL2_image \
				-framework SDL2_ttf \
				-F $(LIB_DIR)/SDL_MAC

FLAGS = -Wall -Wextra -MMD -O3 -g -fsanitize=address

all: $(ODIR) $(NAME)
	@printf $(GREEN)"\e[J[INFO] $(NAME) ready!\n"$(RESET)

$(ODIR):
	@mkdir -p $@

-include $(JOHNNY)

$(ODIR)/%.o: $(CDIR)/%.c
	@printf $(YELLOW)"\e[JCompiling $<\n\e[F"$(RESET)
	@gcc -c $< -o $@ $(CFLAGS) $(INCLUDES)

$(NAME): $(OBJS)
	@gcc -o $(NAME) $(OBJS) $(INCLUDES) $(LIB_FOLDERS) $(CFLAGS)

clean:
	@printf $(CYAN)"[INFO] $(NAME) cleaned!\n"$(RESET)
	@rm -rf $(ODIR)

fclean: clean

	@rm $(NAME)

re: fclean all

.PHONY: clean, all, re, fclean
